    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvBadgeCount"
        style="@style/AppTheme.TextView"
        android:layout_width="@dimen/app_icon_notification"
        android:layout_height="@dimen/app_icon_notification"
