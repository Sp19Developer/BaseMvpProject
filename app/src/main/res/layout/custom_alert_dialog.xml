<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="left">

    <!-- android:background="@drawable/dialogue_linear_layout" -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_grid"
        style="@style/match_wrap"
        android:layout_margin="@dimen/_1sdp"
        android:background="@color/app_bg_color"
        android:elevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <!-- com.yappo.customView.ETechTxtHelvetica -->

                <!--   <ImageView
                       android:id="@+id/succesicon"
                       android:layout_width="@dimen/_50sdp"
                       android:layout_height="@dimen/_50sdp"
                       android:visibility="gone"
                       app:srcCompat="@drawable/success_icon" />
   -->
                <TextView
                    android:id="@+id/lblDialogTitle"
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"

                    android:padding="@dimen/_5sdp"
                    android:text="TextView"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/app_text_large"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/succesicon"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/lblMessage"
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="10dp"
                    android:gravity="left"
                    android:maxLines="3"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="false"
                    android:text="TextView"
                    android:textSize="@dimen/app_text_max" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/black"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:weightSum="1">

                <!-- com.yappo.customView.EtechButtonRobotoBold -->


                <Button
                    android:id="@+id/btn1"
                    style="@style/AppTheme.CustomDialogButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@null"
                    android:padding="@dimen/_3sdp"
                    android:text="Ok"
                    android:layout_margin="@dimen/_1ssp"
                    android:textAllCaps="false"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/app_text_regular_medium" />

                <View
                    android:id="@+id/viewDividerDialog"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/AppTheme.CustomDialogButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_toRightOf="@+id/btn1"
                    android:background="@null"
                    android:padding="@dimen/_3sdp"
                    android:layout_margin="@dimen/_1ssp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/app_text_regular_medium" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/AppTheme.CustomDialogButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_toRightOf="@+id/btn1"
                    android:background="@null"
                    android:padding="@dimen/_3sdp"
                    android:text="Remove Photo"
                    android:layout_margin="@dimen/_1ssp"
                    android:textAllCaps="false"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/app_text_regular_medium" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>